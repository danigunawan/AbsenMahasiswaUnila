<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.andaglos.belajarandorid.ListJadwalActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"/>

    <ImageView
        android:src="@mipmap/jadwal_kosong"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ImageKosong"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Tidak Ada Jadwal"
        android:layout_below="@+id/ImageKosong"
        android:layout_centerInParent="true"
        android:id="@+id/jadwal_kosong"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
